<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:background="@drawable/truyen5"
        android:id="@+id/image_like"
        android:layout_width="150dp"
        android:layout_height="220dp">
    </ImageView>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_height="220dp">
        <TextView
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:id="@+id/title_like"
            android:textSize="17dp"
            android:text="Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_below="@+id/title_like"
            android:layout_marginTop="3dp"
            android:id="@+id/linear1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FC1E0D"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Category: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:id="@+id/category_like"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/linear1"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#FC1E0D"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Anime info: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:id="@+id/info_like"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>
        <ImageView
            android:layout_alignParentBottom="true"
            android:id="@+id/icon_dislike"
            android:layout_marginLeft="10dp"
            app:itemIconTint="@color/dislike_color"
            android:background="@drawable/icon_dislike"
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </ImageView>
    </RelativeLayout>
</LinearLayout>