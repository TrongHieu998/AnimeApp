<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_backgroudDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ImageView>
    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </eightbitlab.com.blurview.BlurView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView_home"
                    android:layout_width="170dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"></ImageView>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:layout_width="220dp"
                android:layout_height="275dp">
                <TextView
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:id="@+id/txt_detail_home"
                    android:textSize="17dp"
                    android:text="Detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#FC1E0D"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Categry: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/txt_category_home"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#FC1E0D"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Anime info: "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/txt_animeinfo_home"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <ImageView
                    android:id="@+id/img_like"
                    android:layout_marginLeft="10dp"
                    app:itemIconTint="@color/like_color"
                    android:background="@drawable/icon_like"
                    android:layout_marginTop="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleView_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>